<%= form_with model: blog_post do |form| %>
  <%if form.object.errors.any? %>
    <% form.object.errors.full_messages do |message| %>
      <div>
        <%= message %>
      </div>
    <%end%>
  <%end%>
  <div>
    <%= form.label :title %>
    <%= form.text_field :title %>
  </div>
  <div>
    <%= form.label :body, style: "display: block" %>
    <%= form.rich_text_area :body %>
  </div>

  <div>
    <%= form.submit %>
  </div>
<% end %>
